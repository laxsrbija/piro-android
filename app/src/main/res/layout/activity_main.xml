<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5f5"
    android:fillViewport="true">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/layout_weather" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:screenOrientation="portrait"
                tools:context=".MainActivity">

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    card_view:cardBackgroundColor="#D32F2F"
                    card_view:cardCornerRadius="4dp"
                    card_view:cardElevation="2dp">

                    <LinearLayout
                        style="?android:buttonBarStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="4dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ToggleButton
                            android:id="@+id/ledMain"
                            style="?android:buttonBarButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:fontFamily="sans-serif-light"
                            android:textColor="@color/colorAccent"
                            android:textOff="@string/ledCentar"
                            android:textOn="@string/ledCentar"
                            android:textSize="45sp" />

                        <ToggleButton
                            android:id="@+id/ledRight"
                            style="?android:buttonBarButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:fontFamily="sans-serif-light"
                            android:textOff="@string/ledDesno"
                            android:textOn="@string/ledDesno"
                            android:textSize="45sp" />

                        <ToggleButton
                            android:id="@+id/ledLeft"
                            style="?android:buttonBarButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:fontFamily="sans-serif-light"
                            android:textOff="@string/ledLevo"
                            android:textOn="@string/ledLevo"
                            android:textSize="45sp" />

                        <ToggleButton
                            android:id="@+id/pc"
                            style="?android:buttonBarButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:fontFamily="sans-serif-light"
                            android:textOff="@string/pc"
                            android:textOn="@string/pc"
                            android:textSize="45sp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    card_view:cardBackgroundColor="#FFA000"
                    card_view:cardCornerRadius="4dp"
                    card_view:cardElevation="2dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/thermalTemp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="40dp"
                            android:fontFamily="sans-serif-light"
                            android:gravity="center"
                            android:paddingStart="5dp"
                            android:text="@string/thermalTemp"
                            android:textColor="@color/white"
                            android:textSize="64sp"
                            tools:ignore="RtlSymmetry" />

                        <LinearLayout
                            android:id="@+id/modeButtons"
                            style="?android:buttonBarStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="150dp"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/modeAuto"
                                style="?android:buttonBarButtonStyle"
                                android:layout_width="60dp"
                                android:layout_height="50dp"
                                android:contentDescription="@string/modeAuto"
                                android:scaleType="fitCenter"
                                android:src="@drawable/mode_1" />

                            <ImageButton
                                android:id="@+id/modeManual"
                                style="?android:buttonBarButtonStyle"
                                android:layout_width="60dp"
                                android:layout_height="50dp"
                                android:contentDescription="@string/modeManual"
                                android:scaleType="fitCenter"
                                android:src="@drawable/mode_2" />

                            <ImageButton
                                android:id="@+id/modeDay"
                                style="?android:buttonBarButtonStyle"
                                android:layout_width="60dp"
                                android:layout_height="50dp"
                                android:contentDescription="@string/modeDay"
                                android:scaleType="fitCenter"
                                android:src="@drawable/mode_3" />

                            <ImageButton
                                android:id="@+id/modeNight"
                                style="?android:buttonBarButtonStyle"
                                android:layout_width="60dp"
                                android:layout_height="50dp"
                                android:contentDescription="@string/modeNight"
                                android:scaleType="fitCenter"
                                android:src="@drawable/mode_4" />

                            <ImageButton
                                android:id="@+id/modeFrost"
                                style="?android:buttonBarButtonStyle"
                                android:layout_width="60dp"
                                android:layout_height="50dp"
                                android:contentDescription="@string/modeFrost"
                                android:scaleType="fitCenter"
                                android:src="@drawable/mode_5" />

                        </LinearLayout>

                        <LinearLayout
                            style="?android:buttonBarStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/modeButtons"
                            android:background="#2B2B2B"
                            android:gravity="center">

                            <ImageButton
                                android:id="@+id/thermalIncrement"
                                style="?android:buttonBarButtonStyle"
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:contentDescription="@string/thermalIncrement"
                                android:paddingBottom="10dp"
                                android:paddingTop="10dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/increment" />

                            <ImageButton
                                android:id="@+id/thermalPower"
                                style="?android:buttonBarButtonStyle"
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:contentDescription="@string/thermalIncrement"
                                android:paddingBottom="8dp"
                                android:paddingTop="8dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/power" />

                            <ImageButton
                                android:id="@+id/thermalDecrement"
                                style="?android:buttonBarButtonStyle"
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:contentDescription="@string/thermalIncrement"
                                android:paddingBottom="10dp"
                                android:paddingTop="10dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/decrement" />

                        </LinearLayout>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    card_view:cardBackgroundColor="#2B2B2B"
                    card_view:cardCornerRadius="4dp"
                    card_view:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/systemUptime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/systemUptime" />

                        <TextView
                            android:id="@+id/systemTemp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/systemTemp" />

                        <TextView
                            android:id="@+id/systemLoad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="@string/systemLoad" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</android.support.v4.widget.SwipeRefreshLayout>